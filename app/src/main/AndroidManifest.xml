<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.microlife.software.a24hr_mt"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature
        android:glEsVersion="0x00018000"
        android:required="true" />

    <uses-feature
        android:allowBackup="true"
        android:name="android.hardware.screen.portrait"
        android:screenOrientation="portrait"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <activity android:name=".MainActivity">
        <!-- activity android:name=".LoadingActivity" -->

            <!-- activity android:name=".leftSideMenu" -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity">
        </activity>
        <activity android:name=".LoadingActivity">

            <!-- <activity android:name=".LoadingActivity"> -->
        </activity>
        <activity
            android:name=".leftSideMenu"
            android:label="@string/title_activity_left_side_menu"
            android:theme="@style/Theme.AppCompat.NoActionBar">

            <!-- android:parentActivityName=".LoginActivity" -->
            <!--
                meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.microlife.software.a24hr_mt.LoginActivity"/
            -->
        </activity>
        <activity android:name=".CreateUserProfileActivity">
        </activity>

        <service
            android:name="com.microlife.software.a24hr_mt.BluetoothLeService"
            android:enabled="true"/>
    </application>

</manifest>